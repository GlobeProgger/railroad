</style>


<table>
  <tr>
    <th>#</th>
    <th>Title</th>
    <th>Text</th>
    <th>author</th>
    <th>action</th>
    <th colspan="3"></th>

  </tr>
 
  <% @articles.each do |article| %>
    <tr>
	<td><%= link_to "Show #{article.id}", article_path(article)%></td>
	<td><%= article.title %></td>
	<td><%= article.text %></td>
	<td><%= article.author %></td>
	<td><%= link_to 'Edit', edit_article_path(article) %>, <%= link_to "Delete", article_path(article),method: :delete, data: {confirm: "Are you sure you would like to delete #{article.id}-#{article.title}?" } %>  </td>
    </tr>
  <% end %>

</table>
<p>
<button>
<%= link_to "New Article", new_article_path(@articles)%>
</button>
</p>
